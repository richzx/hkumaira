---
import BarIcon from '../icons/Bar.svg';
---

<header class="w-full px-[10px] py-5 sm:px-8 flex justify-center">
  <nav class="w-full max-w-7xl flex items-center justify-between">
    <h2 class="font-kumaira leading-none text-[40px]">Kumaira</h2>
    <div class="block sm:hidden cursor-pointer" id="menuBar">
      <img src={BarIcon.src} alt="icono the bar" class="w-6">
    </div>
    <nav class="hidden sm:flex gap-[30px]">
      <a href="/" class="text-xl text-[#212121] font-normal">Inicio</a>
      <a href="/eventos" class="text-xl text-[#212121] font-normal">Eventos</a>
      <a href="/visitanos" class="text-xl text-[#212121] font-normal">Visítanos</a>
      <a href="/contacto" class="text-xl text-[#212121] font-normal">Contacto</a>
    </nav>
  </nav>
</header>

<header class="sidebar transition-all fixed opacity-0 top-[80px] right-[10px] z-10 overflow-y-auto" id="sidebar">
  <nav class="w-[250px] flex flex-col gap-5 p-3 rounded-s-[20px] bg-[#f5f5f5]">
    <a href="/" class="focus:bg-slate-200 hover:bg-slate-300 rounded-lg px-3 py-2 text-2xl text-[#212121] font-medium">Inicio</a>
    <a href="/eventos" class="focus:bg-slate-200 hover:bg-slate-300 rounded-lg px-3 py-2 text-2xl text-[#212121] font-medium">Eventos</a>
    <a href="/visitanos" class="focus:bg-slate-200 hover:bg-slate-300 rounded-lg px-3 py-2 text-2xl text-[#212121] font-medium">Visítanos</a>
    <a href="/contacto" class="focus:bg-slate-200 hover:bg-slate-300 rounded-lg px-3 py-2 text-2xl text-[#212121] font-medium">Contacto</a>
  </nav>
</header>

<script is:inline>
  const menu = document.getElementById('menuBar');
  const sidebar = document.getElementById('sidebar');

  menu.addEventListener('click', () => {
    sidebar.classList.toggle('menu-toggle');
  })
</script>